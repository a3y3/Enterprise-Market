<div class="container margin-vertical-30px">
	<div class="toggle-pending">
		<a href="/admin/rfq/pending">View pending RFQs?</a>
	</div>
	<table class="table table-responsive">
		<thead>
			<tr>
				<th class="text-center">
					Commodity
				</th>
				<th class="text-center">
					Commodity Description
				</th>
				<th class="text-center">
					UOM
				</th>
				<th class="text-center">
					Requested Quantity
				</th>
				<th class="text-center">
					Available Quantity
				</th>
				<th class="text-center">
					Number
				</th>
				<th class="text-center">
					Pincode
				</th>
				<th class="text-center">
					Pending?
				</th>
			</tr>
		</thead>
		<tbody>
			<%@request_for_quotes.each do |rfq|%>
				<tr class="clickable-row" data-id="<%=rfq.id%>">
					<td class="text-center"><a href="/admin/rfq/commodity/<%=rfq.commodity_type.id%>"><%=rfq.commodity_type.name%></a></td>
					<td class="text-center"><a href="/admin/rfq/description/<%=rfq.commodity_type_description.id%>"><%=rfq.commodity_type_description.description%></a></td>
					<td class="text-center"><%=rfq.commodity_type_uom.uom%></td>
					<td class="text-center"><%=rfq.quantity%></td>
					<td class="text-center"><%=rfq.commodity_type.available_quantity%></td>
					<td class="text-center"><%=rfq.mobile_number%></td>
					<td class="text-center"><%=rfq.pincode%></td>
					<td class="text-center"><%if rfq.pending == true%>✓<%else%>✗<%end%></td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>