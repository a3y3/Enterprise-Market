<div class="container">
	<h2>
		Get a Quote
	</h2>
	<%=form_for :rfqs, url: rfqs_path do |f|%>
		<div class="row">
			<div class="col-xs-12 col-sm-6">
				<div class="form-group">
					<input type="text" id="commodities-input-rfq-new" list= "commodities-datalist-rfq-new" autocomplete= "off" placeholder="Search for available commodities">
					<datalist id="commodities-datalist-rfq-new">
					</datalist>
					<%=f.hidden_field :commodity_type_id, id:"commodity_type_id"%>
				</div>
				<div class="form-group">
					<input type="text" id="commodities-descriptions-input-rfq-new" placeholder="Product description" list="commodities-description-datalist-rfq-new">
					<datalist id="commodities-description-datalist-rfq-new"></datalist>
					<%=f.hidden_field :commodity_type_description_id, id: "commodity_type_description_id"%>
				</div>
				<div class="row">
					<div class="col-xs-6 col-sm-5">
						<div class="form-group">
							<%=f.number_field :quantity, placeholder: "Quantity", class: "form-control", autocomplete: "off"%>
						</div>
					</div>
					<div class="col-xs-6 col-sm-2">
						<div class="form-group">
							<%=f.select :commodity_type_uom_id,["UOM"], {:disabled => "UOM", :selected => "UOM"}, {:id => "select-uom-rfqs-new", style: "height: 50px; background-color: rgba(0, 0, 0, 0.05)", class: "form-control"}%>
						</div>
					</div>
					<div class="col-xs-6 col-sm-5">
						<div class="form-group">
							<%=f.number_field :pincode, placeholder: "Pincode", class: "form-control", autocomplete: "postal-code"%>
						</div>
					</div>
					<div class="col-xs-6 col-sm-6">
						<div class="form-group">
							<%=f.number_field :mobile_number, placeholder: "Mobile Number", class: "form-control", autocomplete: "tel"%>
						</div>
					</div>
					<div class="col-xs-6 col-sm-6">
						<div class="form-group">
							<button class="btn btn-primary" type="submit" id="btn-post-rfq">Post requirement</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	<%end%>
</div>